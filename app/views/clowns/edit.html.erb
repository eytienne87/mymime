<h1>Edit <%= @clown.name %>'s Listing</h1>
<%= simple_form_for(@clown) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :years_of_experience %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
