<div class="booking-form">
  <%= simple_form_for(@clown) do |f| %>
    <h1>Edit <%= @clown.name %>'s Listing</h1>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :years_of_experience %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <div class="form-actions">
        <%= f.button :submit, "Update", class: 'btn btn-danger btn-sm mt-2 mr-1' %>
      </div>
    </div>
  <% end %>
</div>
