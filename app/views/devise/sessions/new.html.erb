<div class="container w-50 mt-2">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>Log in</h2>
    <div class="form-inputs">

      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                  wrapper_html: { class: "m-1" },
                  as: :boolean if devise_mapping.rememberable? %>

      <div class="d-flex justify-content-between">
        <div class='d-flex form-actions'>
          <%= f.button :submit, "Log in", class: 'btn btn-danger btn-sm mt-2 mr-1' %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class:'btn btn-outline-danger btn-sm mt-2 mr-1' %><br />
          <% end %>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:'btn btn-outline-danger btn-sm mt-2 mr-1' %><br />
          <% end %>
        </div>
        <%= link_to 'Go back', root_path, class: "btn btn-outline-danger btn-sm mt-2" %>
      </div>

    </div>
  <% end %>
</div>
